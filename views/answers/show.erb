<h2>Shows one answer with the right answer id</h2>

<p>Answer ID: <%=  "#{params['id']}" %></p>
<p>Author ID: <%=  "#{@answer.user_id}" %></p> 
<p>Answer Title: <%=  "#{@answer.title}" %></p>
<p>Answer Content: <%=  "#{@answer.contents}" %></p>
<p>Question ID:<%=  "#{@answer.question_id}" %> </p>

<%if current_user.id == @answer.user_id%>
	<div>
		<a href="/answers/<%="#{params['id']}"%>/edit">Edit</a>
		<a href="/answers/<%="#{params['id']}"%>/delete">Delete</a>
	</div>
<%end%>

<%if logged_in?%>
	<div>
		<a href="/sessions/success">Take me back to user landing</a>
	</div>
<%end%>