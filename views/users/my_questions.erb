<h2>This is where an index of all questions that the logged in user asked goes</h2>

<% selected_questions = Question.where(:user_id => current_user.id) %>

<table>
	<tr>
		<td>ID</td>
		<td>Title</td>
		<td>Author</td>
		<td>Created At</td>
	</tr>

	<% selected_questions.each do |q|%>
		<% id = q.id%>
		<% link_id = "/questions/"+id.to_s%>
		<tr>
			<td><%= "#{q.id}" %></td>
			<td><a href=<%=link_id%>> <%= "#{q.title}" %></a></td>
			<td><%= "#{q.user_id}" %></td>
			<td><%= "#{q.created_at}" %></td>
		</tr>
	<%end%>

</table>

<button onclick="goBack()">Go Back</button>

<script>
function goBack() {
  window.history.back();
}
</script>
