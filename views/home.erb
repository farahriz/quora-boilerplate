<h1>Quora Clone</h1>

<% if !logged_in? %>
	<div>
		<a href="/signup">Register</a>
		<a href="/sessions/new">Sign in</a>
	</div>
<% end%>

<% if logged_in? %>
	<div>
		<ul>
			<li><a href="/questions/new">Make a new question</a></li>
			<li><a href="/questions">See all questions</a></li>
			<li><a href="/answers">See latest answers</a></li>
			<li><a href="/myquestions">See all my questions</a></li>
			<li><a href="/myanswers">See all my answers</a></li>
		</ul>
		
	</div>

	<form method="post" action="/sessions/delete">
	    <input type=submit value="Log Me Out">
	</form>
<% end%>